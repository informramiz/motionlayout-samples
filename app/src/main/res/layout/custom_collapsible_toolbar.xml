<?xml version="1.0" encoding="utf-8"?>
<github.informramiz.com.motionlayoutsamples.customtoolbar.CollapsibleToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:fitsSystemWindows="false"
    app:layoutDescription="@xml/motion_scene_collapsible_toolbar"
    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

    <ImageView
        android:id="@+id/toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/monterey"
        android:background="?attr/colorAccent"
    />

    <TextView
        android:id="@+id/toolbar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monterey"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

</github.informramiz.com.motionlayoutsamples.customtoolbar.CollapsibleToolbar>